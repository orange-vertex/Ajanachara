    <intArray id="vertexCoords"> 10 14  14 10  16 10  20 10  21 3  28 5  29 19  3 4  6 18 </intArray>
    -->
    <string   id="comment">   % </string>
    <string   id="separator"> &#160; </string>
  </visibilityGraphAnalysis>
</XperiML>
